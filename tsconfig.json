{
  "compilerOptions": {
    "incremental": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "CommonJS",
    "rootDirs": ["src"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "moduleResolution": "node",  
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "files": [
		"types.d.ts"
	]
}